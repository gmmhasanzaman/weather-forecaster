<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

    <style name="bigTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">75sp</item>
    </style>

    <style name="mediumBoldTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>

    </style>

</resources>
